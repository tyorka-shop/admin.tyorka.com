    "@types/koa-mount": "^4.0.1",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^3.0.3",
    "@types/koa__router": "^8.0.8",
    "@types/node": "^10.12.2",
    "@types/qs": "^6.9.7",
    "@types/sharp": "^0.29.2",
    "@types/showdown": "^1.9.4",
    "@types/uuid": "^8.0.0",
    "joi-to-typescript": "^3.0.3",

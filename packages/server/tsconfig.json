{
  "include": ["./src"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["dom", "es2017", "es2018", "esnext.asynciterable"],
    "resolveJsonModule": true,
    "baseUrl": "src",
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  }
}